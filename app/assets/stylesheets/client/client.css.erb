/* Global Settings */
@font-face {
  font-family: kosher;
  src: url(<%= asset_path 'stencilstd.otf' %>);
}
body {
  background-color: #eee;
  font-family: 'Roboto', sans-serif;
}
/* Top New */
.kosher {
  font-family: kosher;
}
.container-fluid {
  padding: 0;
  overflow-x: hidden;
}
[data-type=background] {
  width: 100%;
  background-position: 50% 0;
  background-repeat: no-repeat !important;
  background-attachment: fixed !important;
  background-size: cover !important;
  position: relative;
}
.social-media li {
  display: inline;
}
.social-media a {
  display: inline-block;
  padding: 10px;
}
#top {
  background-image: url(<%= asset_path 'band-image-home.png' %>);
}
.text-overlay-outer {
  position: absolute;
  z-index: 10;
}
.text-overlay-inner {
  position: relative;
  text-align: center;
}
/* Whats Nu */
.separator {
  min-height: 115px;
  color: #fff;
  background: #f36b10 url(<%= asset_path 'kosher-logo-white.png' %>) no-repeat 76em -20em;
}
/* Newsletter Sign up */
#form {
  background: url(<%= asset_path 'hebrew-form.png' %>);
}
/* Album Section */
#album {
  background: url(<%= asset_path 'band-image-album-section.png' %>);
}
/* About Section */
#about {
  background: #000 url(<%= image_path 'band-image-about.png' %>) 50% 50%;
  background-size: 1890px auto !important;
  overflow-y: scroll;
}
/* Shop Section */
#shop {
  background: url(<%= image_path 'shop-background.png' %>);
}
.shop .tshirt {
  position: absolute;
  background: transparent url(<%= image_path 'kosher-tshirt.png' %>) no-repeat center center;
  width: 520px;
  height: 100%;
  z-index: 15;
  right: 4%;
}
.shop .stacked-shirts {
  position: absolute;
  left: 0;
  z-index: 8;
  height: 100%;
  width: 680px;
  background: transparent url(<%= image_path 'stacked-shirts.png' %>) no-repeat left center;
  background-size: cover;
  -webkit-filter: grayscale(100%);
  -moz-filter: grayscale(100%);
  filter: grayscale(100%);
}
/* Shows Page */
#shows-page {
  background: white;
  height: 100vh;
  padding-bottom: 25px;
}
#upcoming h1, #previous h1 {
  margin-left: 9.5%;
  font-family: 'Roboto', sans-serif;
  font-weight: lighter;
  font-size: 6em;
}
#shows-page .event {
  margin-left: 10%;
  margin-bottom: 32px;
}
#shows-page .event p {
  font-weight: bold;
  font-size: 1.25em;
}
#shows-page .event h3 {
  margin-top: 0;
}
@media(max-width: 992px) {
  .separator h1 {
    font-size: 6em;
  }
}
@media(max-width: 1200px) {
  .new-content .main {
    text-align: center;
  }
}
.debut,
.form-content,
.info {
  position: relative;
  top: 50%;
  -webkit-transform: translateY(-50%);
  -ms-transform: translateY(-50%);
  transform: translateY(-50%);
}
