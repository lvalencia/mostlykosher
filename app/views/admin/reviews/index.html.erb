<p id="notice"><%= notice %></p>

<h1>Listing Admin Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Entity</th>
      <th>Quote (Truncated)</th>
      <th>Link</th>
      <th>Ordering</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_reviews.order(ordering: :asc).each do |admin_review| %>
      <tr>
        <td><%= entity(admin_review) %></td>
        <td><%= quote(admin_review) %></td>
        <td><%= link(admin_review) %></td>
        <td><%= ordering(admin_review) %></td>
        <td><%= link_to 'Show', admin_review_path(admin_review) %></td>
        <td><%= link_to 'Edit', edit_admin_review_path(admin_review) %></td>
        <td><%= link_to 'Destroy', admin_review_path(admin_review), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Review', new_admin_review_path %>
