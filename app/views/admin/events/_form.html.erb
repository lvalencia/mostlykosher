<%= form_for([:admin, @admin_event]) do |f| %>
    <% if @admin_event.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@admin_event.errors.count, 'error') %> prohibited this admin_event from being saved:</h2>

          <ul>
            <% @admin_event.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <i class="fa fa-times fa-stack-1x"></i>
    <div class="field">
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :link %><br>
      <%= f.text_field :link %>
    </div>
    <div class="field">
      <%= f.label :description %><br>
      <%= f.text_area :description %>
    </div>
    <div class="field">
      <%= f.label :location %><br>
      <%= f.text_area :location %>
    </div>
    <div class="field">
      <div class='input-group date' id='datetimepicker' data-date="<%= @admin_event.date.strftime('%m/%d/%Y')%>">
        <%= f.text_field :date %>
        <span class="input-group-addon">
          <span class="glyphicon glyphicon-calendar"></span>
        </span>
      </div>
    </div>
    <div class="field">
      <%= f.label :published %><br>
      <%= f.radio_button :published_at, '', checked: (@admin_event.published_at ? 'checked' : '') %>
      <%= f.label :unpublished %><br>
      <%= f.radio_button :published_at, '', checked: (@admin_event.published_at ? '' : 'checked') %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
