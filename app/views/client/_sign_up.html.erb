<div class="form row" id="form" data-parallax="back" data-type="background">
  <div data-parallax="wrapper">
    <div class="form-content col col-sm-12">
      <div class="form-field col-sm-12">
        <form id="newsletter" action="/fan/newsletter" method="POST">
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <span class="shoutout col-sm-12">
            <%= I18n.t(:title, scope: [:client, :sign_up]) %>
          </span>
          <span class="shoutout col-sm-12">
            <%= I18n.t(:subtitle, scope: [:client, :sign_up]) %>
          </span>
          <input type="text" name="email" class="col-sm-12">
          <span id="thankyou" style="display:none;">
            <%= I18n.t(:thank_you, scope: [:client, :sign_up]) %>
          </span>
          <button type="submit" class="col-sm-12">
            <%= I18n.t(:call_to_action, scope: [:client, :sign_up]) %>
          </button>
        </form>
      </div>
      <div class="quote col-sm-12">
        <span class="upsidedown quotation-mark">&ldquo;</span>
        <span>
          <%= I18n.t(:quote, scope: [:client, :sign_up]) %>
        </span>
        <span class="rightsideup quotation-mark">&rdquo;</span>
      </div>
    </div>
  </div>
</div>
